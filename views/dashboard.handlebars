<h2>Add a New Post: </h2>
  <form class="new-post-form">
    <div class="post-title-wrapper">
      <label for="post-title">Body:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div class="post-content-wrapper">
      <label for="post-content">Content:</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <div class="post-btn-wrapper">
      <button type="submit" class="btn">Create</button>
    </div>
  </form>
</section>

{{#if blogPosts.length}}
<section>
  <h2>Your Posts: </h2>
  {{#each blogPosts as |post|}}
  <article class="post">
    <div class="title-wrapper">
      <div class="title">
        <h3>{{post.title}}</h3>
      </div>
      <div class="details">
        {{#if post.user.user_name}}
        <p>Posted by {{post.user.user_name}} on {{date_formatting post.created_at}}</p>
        {{else}}
        <p>Created by {{date_formatting post.created_at}}</p>
        {{/if}}
      </div>
    </div>
    <div class="comments">
      <p>{{post.post_content}}</p>
      <p>{{comments.length}} {{plural_formatting "comment" comments.length}}</p>
    </div>
    <div class="content">
    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    <a href="/post/{{id}}" class="details-link">Post</a>
    </div>
  </article>
  {{/each}}
</section>
{{/if}}

<script src="/javascript/newPost.js"></script>