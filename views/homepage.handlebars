<div class="blog-wrapper">
    <h2>Posts:</h2>
    {{#if blogPosts.length}}
    {{#each blogPosts as |post|}}
    <article class="post">
        <div class="title-wrapper">
            <div class="title">
                <h3>{{post.title}}</h3>
            </div>
            <div class="details">
                {{#if post.user.user_name}}
                <p> {{post.user.user_name}} on {{date_formatting post.created_at}}</p>
                {{else}}
                <p>{{date_formatting post.created_at}}</p>
                {{/if}}
            </div>
        </div>
        <div class="comments">
            <p>{{comments.length}} {{plural_formatting "comment" comments.length}} </p>
        </div>
        <div class="content">
            <a class="post-details" href="/post/{{id}}">Postss</a>
        </div>
    </article>
    {{/each}}
    {{else}}
    <h3>edit</h3>
    {{/if}}
</div>